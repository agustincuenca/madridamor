---
import Layout from '../layouts/Layout.astro';
const base = import.meta.env.BASE_URL;
---

<Layout
  title="Thank You"
  description="Thank you for your inquiry. We'll get back to you within 24 hours."
  currentPage="contact"
  alternateKo="/ko/thank-you/"
>
  <section class="section" style="min-height: 60vh; display: flex; align-items: center;">
    <div class="content-narrow text-block-centered">
      <p class="text-xs uppercase tracking-widest text-gray-400 mb-4">Message Sent</p>
      <h1>Thank You!</h1>
      <p class="mt-6">
        Your message has been received! We'll get back to you within 24 hours to start planning your Madrid photography experience.
      </p>
      <p class="mt-8 text-sm text-gray-500">
        Want a faster response?
      </p>
      <div class="mt-6 flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="https://wa.me/821073833133?text=Hi!%20I%20just%20sent%20an%20inquiry%20through%20the%20website."
          target="_blank"
          rel="noopener noreferrer"
          class="btn-simple"
        >
          Message on WhatsApp
        </a>
        <a href={`${base}gallery/`} class="btn-simple" style="border-color: #d1d5db; color: #6b7280;">
          View Gallery
        </a>
      </div>
    </div>
  </section>
</Layout>
