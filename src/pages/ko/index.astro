---
import Layout from '../../layouts/Layout.astro';

const galleryImages = [
  { src: '/images/gallery/photo-1.jpg', alt: '마드리드 마요르 광장의 커플' },
  { src: '/images/gallery/photo-2.jpg', alt: '레티로 공원에서의 로맨틱한 순간' },
  { src: '/images/gallery/photo-3.jpg', alt: '왕궁에서의 사랑' },
  { src: '/images/gallery/photo-4.jpg', alt: '마드리드의 황금빛 시간' },
  { src: '/images/gallery/photo-5.jpg', alt: '그란 비아의 커플' },
  { src: '/images/gallery/photo-6.jpg', alt: '템플로 데 데보드 일몰' },
  { src: '/images/gallery/photo-7.jpg', alt: '마드리드 거리의 로맨스' },
  { src: '/images/gallery/photo-8.jpg', alt: '마드리드 커플 스냅' },
  { src: '/images/gallery/photo-9.jpg', alt: '마드리드 러브 스토리' },
  { src: '/images/gallery/photo-10.jpg', alt: '마드리드 커플 세션' },
];
---

<Layout
  title="홈"
  description="마드리드 전문 커플 스냅 촬영. 레티로 공원, 마요르 광장, 왕궁 등 마드리드의 아름다운 명소에서 당신의 사랑 이야기를 담아드립니다."
  lang="ko"
  currentPage="home"
  alternateEn="/"
>
  <!-- Video Hero Section - Lorryn Style -->
  <section class="video-hero">
    <video autoplay muted loop playsinline poster="/images/gallery/photo-1.jpg">
      <source src="/video/hero.mp4" type="video/mp4" />
    </video>
    <div class="video-hero-overlay"></div>
    <div class="video-hero-content">
      <!-- Top -->
      <div class="flex justify-between items-start">
        <a href="/ko/contact/" class="text-xs tracking-widest uppercase hover:opacity-70 transition-opacity">
          문의하기
        </a>
        <div></div>
      </div>

      <!-- Bottom -->
      <div class="flex justify-between items-end">
        <div>
          <p class="text-xs tracking-widest uppercase mb-1">커플 스냅 촬영</p>
          <p class="text-xs tracking-widest uppercase opacity-70">마드리드 기반</p>
        </div>
        <div class="text-right">
          <p class="text-xs tracking-widest uppercase mb-1">당신의 로맨스를 담다</p>
          <p class="text-xs tracking-widest uppercase opacity-70">마드리드 그리고 그 너머</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Masonry Gallery Grid - Le Petit Loup Style -->
  <section class="py-2">
    <div class="masonry-grid">
      {galleryImages.map((image, index) => (
        <a href={image.src} class="masonry-item glightbox" data-gallery="home">
          <img
            src={image.src}
            alt={image.alt}
            loading={index < 4 ? 'eager' : 'lazy'}
          />
        </a>
      ))}
    </div>
  </section>
</Layout>
