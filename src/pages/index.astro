---
import Layout from '../layouts/Layout.astro';

const base = import.meta.env.BASE_URL;
const galleryImages = [
  { src: `${base}images/gallery/photo-1.jpg`, alt: 'Couple at Plaza Mayor Madrid' },
  { src: `${base}images/gallery/photo-2.jpg`, alt: 'Romantic moment at Retiro Park' },
  { src: `${base}images/gallery/photo-3.jpg`, alt: 'Love at Royal Palace' },
  { src: `${base}images/gallery/photo-4.jpg`, alt: 'Golden hour in Madrid' },
  { src: `${base}images/gallery/photo-5.jpg`, alt: 'Couple in Gran Via' },
  { src: `${base}images/gallery/photo-6.jpg`, alt: 'Temple of Debod sunset' },
  { src: `${base}images/gallery/photo-7.jpg`, alt: 'Madrid streets romance' },
  { src: `${base}images/gallery/photo-8.jpg`, alt: 'Couple photoshoot Madrid' },
  { src: `${base}images/gallery/photo-9.jpg`, alt: 'Love story Madrid' },
  { src: `${base}images/gallery/photo-10.jpg`, alt: 'Madrid couple session' },
];
---

<Layout
  title="Home"
  description="Professional couple photography in Madrid. Capture your love story at iconic locations like Retiro Park, Plaza Mayor, and the Royal Palace."
  currentPage="home"
  alternateKo="/ko/"
>
  <!-- Video Hero Section - Lorryn Style -->
  <section class="video-hero">
    <video autoplay muted loop playsinline poster={`${base}images/gallery/photo-1.jpg`}>
      <source src={`${base}video/hero.mp4`} type="video/mp4" />
    </video>
    <div class="video-hero-overlay"></div>
    <div class="video-hero-content">
      <!-- Top -->
      <div class="flex justify-between items-start">
        <a href={`${base}contact/`} class="text-xs tracking-widest uppercase hover:opacity-70 transition-opacity">
          Enquire
        </a>
        <div></div>
      </div>

      <!-- Bottom -->
      <div class="flex justify-between items-end">
        <div>
          <p class="text-xs tracking-widest uppercase mb-1">Couple Photography</p>
          <p class="text-xs tracking-widest uppercase opacity-70">Based in Madrid</p>
        </div>
        <div class="text-right">
          <p class="text-xs tracking-widest uppercase mb-1">Capturing Your Romance in</p>
          <p class="text-xs tracking-widest uppercase opacity-70">Madrid and Beyond</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Masonry Gallery Grid - Le Petit Loup Style -->
  <section class="py-2">
    <div class="masonry-grid">
      {galleryImages.map((image, index) => (
        <a href={image.src} class="masonry-item glightbox" data-gallery="home">
          <img
            src={image.src}
            alt={image.alt}
            loading={index < 4 ? 'eager' : 'lazy'}
          />
        </a>
      ))}
    </div>
  </section>
</Layout>
